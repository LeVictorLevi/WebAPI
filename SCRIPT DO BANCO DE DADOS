( NAME = N'FerramentasBD_log', FILENAME = N'C:\Program Files\Microsoft SQL Server\MSSQL15.APPSERVER\MSSQL\DATA\FerramentasBD_log.ldf' , SIZE = 8192KB , MAXSIZE = 2048GB , FILEGROWTH = 65536KB )
